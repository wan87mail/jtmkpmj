---
/**
 * Slider.astro - Image/Info Slider Component
 * Auto-sliding carousel with pure JavaScript
 * Features: Auto-advance, dots navigation, arrows, pause on hover, touch support
 */

interface Slide {
  id: number;
  title: string;
  description: string;
  tag: string;
  bgGradient: string;
  icon: string;
}

const slides: Slide[] = [
  {
    id: 1,
